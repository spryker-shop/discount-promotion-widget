{% set product = product %}

<div class="callout cart-item">

    <div class="row">
        <div class="small-9 large-expand columns">
            <ul class="no-bullet">
                <li class="lead">{{ product.promotionItem.discount.displayName }}</li>
                <li>{{ product.promotionItem.discount.description }}</li>
            </ul>
        </div>
    </div>

    <div class="row">
        {% include '@CartPage/_partials/cart-images.twig' with {cartItem : product } %}

        <div class="small-9 large-expand columns">
            <ul class="no-bullet">
                {# General data #}
                <li class="lead">{{ product.name }}</li>
                <li class="__secondary">
                    <small>{{ 'cart.item.sku' | trans }} {{ product.sku }}</small>
                </li>

                {% include '@DiscountPromotionWidget/_cart-page/_partials/product-variants.twig' %}
            </ul>
        </div>

        {% include '@DiscountPromotionWidget/_cart-page/_partials/item-prices.twig' %}

        {% include '@DiscountPromotionWidget/_cart-page/_partials/add-to-cart.twig' %}
    </div>
</div>
